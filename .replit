modules = ["rust"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TriadChain CLI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TriadChain Test"

[[workflows.workflow]]
name = "TriadChain CLI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --bin triadchain_cli"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "TriadChain Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --bin triadchain_cli -- --help"

[workflows.workflow.metadata]
outputType = "console"
